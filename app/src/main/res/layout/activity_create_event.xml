<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Header (fixed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#4A3AFF"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="8dp"
        android:translationZ="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Event"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />
</LinearLayout>

    <!-- Scrollable content: Image section + Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Image Selection (compact + centered, smaller width) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:clipToPadding="false"
                android:clipChildren="false">

                <TextView
                    android:text="Event Image"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Centered small rectangle picker -->
                <FrameLayout
                    android:id="@+id/imageSquare"
                    android:layout_width="240dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_dashed_square"
                    android:foreground="?attr/selectableItemBackground"
                    android:clipToPadding="true"
                    android:padding="6dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/selectedImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:contentDescription="Selected image"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTapHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to select image"
                        android:textSize="13sp"
                        android:textColor="#7A7A7A"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Outlined button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectImageBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="7dp"
                    android:text="Choose from built-in gallery"
                    android:textAllCaps="false"
                    android:textColor="#4A3AFF"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/ic_gallery"
                    app:iconPadding="6dp"
                    app:iconGravity="textStart"
                    app:strokeColor="#4A3AFF"
                    app:strokeWidth="1dp" />
                <!-- removed app:insetTop / app:insetBottom -->

            </LinearLayout> <!-- close image selection section -->

            <!-- Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <EditText
                    android:id="@+id/eventName"
                    android:hint="Event Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/venue"
                    android:hint="Venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <!-- Start Date-Time -->
                <EditText
                    android:id="@+id/startDateTime"
                    android:hint="Start Date and Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="true" />

                <!-- End Date-Time -->
                <EditText
                    android:id="@+id/endDateTime"
                    android:hint="End Date and Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="true" />

                <EditText
                    android:id="@+id/pax"
                    android:hint="Number of Pax"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/input_bg"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/description"
                    android:hint="Describe your event in a few words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/input_bg"
                    android:minLines="3"
                    android:gravity="top"
                    android:padding="12dp" />

                <TextView
                    android:text="Gender Specification"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/genderGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/none"
                        android:text="None"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/male"
                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />

                    <RadioButton
                        android:id="@+id/female"
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </RadioGroup>

                <Button
                    android:id="@+id/createBtn"
                    android:text="Create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#000000"
                    android:textColor="@android:color/white"
                    android:padding="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="#000000"
        app:itemTextColor="#000000"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
